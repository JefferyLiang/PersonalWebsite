{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false
  },
  "include":[
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}